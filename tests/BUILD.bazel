load("@pip//:requirements.bzl", "requirement")
load("@rules_python//python:defs.bzl", "py_binary", "py_library")

py_binary(
    name = "pandas_passes",
    srcs = ["pandas_passes.py"],
    deps = [
        requirement("pandas"),
        requirement("pandas-stubs"),
    ],
)

py_binary(
    name = "pandas_fails",
    srcs = ["pandas_fails.py"],
    deps = [
        requirement("pandas"),
        requirement("pandas-stubs"),
    ],
)

py_library(
    name = "tests",
    srcs = [
        "pandas_fails.py",
        "pandas_passes.py",
    ],
    visibility = ["//:__subpackages__"],
    deps = ["@pip_pandas//:pkg"],
)
